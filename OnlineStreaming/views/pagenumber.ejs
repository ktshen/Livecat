<% pages.forEach(function(page, index) {%>
            <% if (page == currentPage) { %>
                <li class="page-item active" aria-current="page">
                    <span class="page-link">
                        <%= page %>
                        <span class="sr-only">(current)</span>
                    </span>
                </li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="?pg=<%= page %>"><%= page %></a></li>
            <% } %>
<%}) %>

