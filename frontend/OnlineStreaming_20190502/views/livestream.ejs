                                    <iframe
                                        id="video"
                                        name="<%= stream.videourl%>"
                                        src="<%= stream.videoembedded %>"
                                        height="500"
                                        width="100%"
                                        frameborder="0"
                                        scrolling="no"
                                        allowfullscreen="true">
                                    </iframe>
                            </div>
                            </div>
                            <div class="card-body">
                                <hr class="featurette-divider">

                                <h3 class="card-title"><%= stream.title %>

