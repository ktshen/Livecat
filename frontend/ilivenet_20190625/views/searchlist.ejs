<% var adCount = 0 %>

<div class="row no-gutters">
    <div class="col-md-12">
         <div class="card">
             <br>
            <% if (posts.length == 0 || resultfound == false ) { %>
                <h3> No results for <%= keyword %>, maybe you would like ... </h3>
            <% } else { %>
                <h3> Results for <%= keyword %></h3>
            <% } %>
            <div class="comment-widgets scrollable">
            <% posts.forEach(function(post, index) {%>
                <% if (adCount > 0 && adCount%4 == 0 ) { %>
                    <a href="javascript:void(0);" style="color:#000000;">
                        <!-- Comment Row -->
                        <div class="d-flex flex-row comment-row m-t-0" style="height:150px;background-color:#c0c0c0">
                            <div class="align-middle mx-auto">
                                <br>
                                <br>
                                    <h1 >AD</h1>
                            </div>
                        </div>
                    </a>
                <% } %>

                <% adCount+=1; %>

                <% if (post.platform == "Twitch" ) { %>
                    <a href="javascript:void(0);" onclick="window.open('/livestream/<%= post.channel %>')" style="color:#000000;">
                        <!-- Comment Row -->
                        <div class="d-flex flex-row comment-row m-t-0">
                            <div style="position:relative">
                                <img class="rounded mx-auto" src="<%= post.thumbnails %>" alt="<%= posts.platform %>-<%= post.title %>" width="200" height="150px">
                                <!-- platform logo -->
                                <div class="stream-img">
                                    <img src="/images/<%= post.platform %>-icon.png"  width="100%" height="100%"></img>
                                </div>
                                <!-- view number -->
                                <% if (post.platform != "Facebook") { %>
                                    <div class="rounded viewcount">
                                        <a class="mdi mdi-eye"style="color: #FFFFFF"><%= post.viewers %></a>
                                    </div>
                                <% } %>
                                <!-- live status -->
                                <% if (post.status == "live" || post.status == "Live" || post.status == "LIVE") { %>
                                    <div class="rounded livestatus">
                                        <a style="color: #FFFFFF">LIVE</a>
                                    </div>
                                <% } %>
                            </div>
                            <div class="comment-text w-100">
                                <h4 class="font-medium omit"><%= post.title %></h4>
                                <h5 class="font-medium omit"><%= posts.description %> </h5>
                                <div class="comment-footer">
                                    <span class="text-muted float-right"><%= post.published %></span>
                                    <!-- <button type="button" class="btn btn-cyan btn-sm">Edit</button>
                                    <button type="button" class="btn btn-success btn-sm">Publish</button>
                                    <button type="button" class="btn btn-danger btn-sm">Delete</button> -->
                                </div>
                            </div>
                        </div>
                    </a>
                <% } else { %>
                    <a href="javascript:void(0);" onclick="window.open('<%= post.videourl %>')" style="color:#000000;">
                        <!-- Comment Row -->
                        <div class="d-flex flex-row comment-row m-t-0">
                            <div style="position:relative;">
                                <img class="rounded mx-auto" src="<%= post.thumbnails %>" alt="<%= posts.platform %>-<%= post.title %>" width="200" height="150px">
                                <!-- platform logo -->
                                <div class="stream-img">
                                    <img src="/images/<%= post.platform %>-icon.png"  width="100%" height="100%"></img>
                                </div>
                                <!-- view number -->
                                <% if (post.platform != "Facebook") { %>
                                    <div class="rounded viewcount">
                                        <a class="mdi mdi-eye"style="color: #FFFFFF"><%= post.viewers %></a>
                                    </div>
                                <% } %>
                                <!-- live status -->
                                <% if (post.status == "live" || post.status == "Live" || post.status == "LIVE") { %>
                                    <div class="rounded livestatus">
                                        <a style="color: #FFFFFF">LIVE</a>
                                    </div>
                                <% } %>
                            </div>
                            <div class="comment-text w-100">
                                <h4 class="font-medium omit"><%= post.title %></h4>
                                <h5 class="font-medium omit"><%= posts.description %> </h5>
                                <div class="comment-footer">
                                    <span class="text-muted float-right"><%= post.published %></span>
                                    <!-- <button type="button" class="btn btn-cyan btn-sm">Edit</button>
                                    <button type="button" class="btn btn-success btn-sm">Publish</button>
                                    <button type="button" class="btn btn-danger btn-sm">Delete</button> -->
                                </div>
                            </div>
                        </div>
                    </a>
                <% } %>
            <%}) %>
            </div>
        </div>
    </div>
</div>
